<!DOCTYPE html>
<html>
  <head>
    <%- include ('../partials/head.ejs') -%>
  </head>
    <body>
      <%- include ('../partials/nav.ejs') -%>
      <div class="container">
        <h1>Login to GoDutch</h1>
        <div class="row">
          <form class="col s12" action="/sessions" method="POST">
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="Placeholder" id="username" type="text" class="validate" name="username" required>
                <label for="username">User Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" class="validate" name="password" required>
                <label for="password">Password</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Login
              <i class="material-icons right">send</i>
            </button> 
            
            <h5 class='invalid'>Invalid username or password</h5>
          </form>
        </div>
        <h3>New to GoDutch? <a href='../users/new'>Sign Up</a>
    </body>
</html>

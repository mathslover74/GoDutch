<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') -%>
  </head>
  <body>
    <%- include ('../partials/nav2.ejs') -%>
    
    <h1>Dashboard</h1>
  <button><a href="/expenses/new">Create Expenses</a></button>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>Date</th>
        <th>Friend</th>
        <th>Description</th>
        <th>Paid by</th>
        <th>Amount ($)</th>
        
      </tr>

    </thead>
    <tbody>      
      <% for (let i = 0; i < expenses.length; i++) { %>
         <tr>
           <td><%= expenses[i].date %></td>
           <td><%= expenses[i].name %></td>
           <td><a href="expenses/<%= expenses[i].id%>"><%= expenses[i].description; %></a></td>
          <% if (expenses.[i].paidByYou === true) { %>
            <td><%= expenses[i].paidByYou %></td>
            <td><%= expenses[i].amount/2 %></td>
         <% } %> 
           
           
          </tr>
         
       <% } %>
    </tbody>
  </table>
  </body>
</html>